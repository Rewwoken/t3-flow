{
	"semi": true,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"trailingComma": "all",
	"arrowParens": "always",
	"useTabs": false,
	"printWidth": 80,
	"tabWidth": 2,
	"singleAttributePerLine": true,

	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/app/(.*)$",
		"^@/hooks/(.*)$",
		"^@/components/(.*)/hooks/(.*)$",
		"^@/components/(.*)$",
		"^@/components/ui/(.*)$",
		"^@/api/(.*)$",
		"^@/services/(.*)$",
		"^@/utils/(.*)$",
		"^@/constants/(.*)$",
		"^@/types/(.*)$",
		"^../(.*)",
		"^./(.*)",
		"(.css)$"
	],
	"importOrderSeparation": false,
	"importOrderSortSpecifiers": true,
	"plugins": [
		"@trivago/prettier-plugin-sort-imports",
		"prettier-plugin-tailwindcss"
	]
}
